<h3 style="text-align: center">Listing confirmation.</h3>

<table align='center' class='container' style='margin-top: 50px; background-color: #f3f3f3'>
  <tbody>
    <tr>
      <td>
        <table class='row'>
          <tbody>
            <tr>
              <p><%= listing.room_type %></p>
            </tr>
          </tbody>
        </table>
        <table class='row'>
          <tbody>
            <tr>
              <p>Check-in: <%= listing.check_in %></p>
            </tr>
          </tbody>
        </table>
        <table class='row'>
          <tbody>
            <tr>
              <p>Check-out: <%= listing.check_out %></p>
            </tr>
          </tbody>
        </table>
        <table class='row'>
          <tbody>
            <tr>
              <p>Price: $<%= listing.price%><span>/night</span></p>
            </tr>
          </tbody>
        </table>
        <table class="spacer">
          <tbody>
            <tr>
              <td height="10px"></td>
            </tr>
          </tbody>
        </table>
        <table class='row'>
          <tbody>
            <tr>
              <h5> Seller: </h5>
            </tr>
            <ul>
              <li><p>Name: <%= seller.first_name%> <%= seller.last_name%></p></li>
              <li><p>Email: <%= seller.email%></p></li>
              <li><p>Phone number: <%= seller.phone_number%></p></li>
            </ul>
          </tbody>
        </table>
        <table class='row'>
          <tbody>
            <tr>
              <p>Confirmation number: <%= listing.confirmation_number%></p>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>
