  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user, url: @url, controller: UsersController do |f| %>

        <div class="form-group">
          <label for="email">Email address</label>
         
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
        <div class="form-group">
          <label for="first_name">First Name</label>
          <%= f.text_field :first_name, class: "form-control", placeholder: "Enter First Name" %>
        </div>
        <div class="form-group">
          <label for="last_name">Last Name</label>
          <%= f.text_field :last_name, class: "form-control", placeholder: "Enter Last Name" %>
        </div>
        <div class="form-group">
          <label for="phone_number">Phone Number</label>
          <%= f.text_field :phone_number, class: "form-control", placeholder: "Enter Phone Number" %>
        </div>

        <div class="form-group">
          <label for="type">User Type</label>
          <% if current_user.admin %>
            <%= f.select :type, options_for_select(["Admin"], @user.type), {}, class: "form-control" %>
          <% end %>
        </div>
        <div class="form-group">
          <label for="type">Hotel</label>
            <%= f.select :hotel_id, options_for_select(@hotels.map { |hotel| [hotel.fullname, hotel.id] }), {}, {onChange: "javascript: alert('abc');", class: "form-control"} %>
        </div>

        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
        </div>
        
        <% if @user.new_record? %>
          <%= f.submit "Add", class: "btn btn-success" %>
        <% else %>
          <%= f.submit "Update", class: "btn btn-primary" %>
        <% end %>
      <% end %>
      <br>
      <%= link_to 'Back', user_path(current_user) %>
    </div>
  </div>